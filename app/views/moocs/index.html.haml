- title "Moocs"
.container
  - @moocs.each do |platform, mooc_group|
    %h2= platform
    - mooc_group.each do |mooc|
      .row.mooc
        .col-md-2.text-right= date_string(mooc.finish_date, true).html_safe
        .col-md-7= link_to mooc.name, mooc.course_link
        .col-md-1.text-left= link_to 'Statement', '#'
        - if current_user
          .col-md-1.text-right= link_to 'Edit', edit_mooc_path(mooc)
          .col-md-1.text-left= link_to 'Delete', mooc, method: :delete, data: { confirm: 'Are you sure?' }
  %br
  - if current_user
    = link_to 'New Mooc', new_mooc_path
