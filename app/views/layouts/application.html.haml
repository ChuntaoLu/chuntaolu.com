%link{:href => "http://fonts.googleapis.com/css?family=Cabin+Sketch|Homenaje", :rel => "stylesheet", :type => "text/css"}
%html
  %head
    %title= yield(:title) || "Chunto LU"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          -#%a.navbar-brand{href: root_path}  Chuntao  Lu
          = link_to "Chuntao Lu", root_path, class: "navbar-brand"
        #bs-navbar-collapse.collapse.navbar-collapse
          %ul.nav.navbar-nav.pull-right
            %li{class: active?(articles_path)}
              = link_to "Blog", articles_path
            %li{class: active?(microposts_path)}
              = link_to "Micropost", microposts_path
            %li{class: active?(moocs_path)}
              = link_to 'Mooc', moocs_path
            %li{class: active?(page_path('about'))}
              = link_to 'About', page_path('about')
            - if current_user
              %li.dropdown
                -#%a{href: '/', "data-toggle" => "dropdown"}
                -#  Admin
                %a{href: '/'}
                  Admin
                %ul.dropdown-menu
                  %li= link_to "Pages", pages_path
                  %li= link_to "Users", users_path
                  %li.divider
                  %li= link_to "Log out", logout_path
                  %li.divider
                  %li= link_to current_user.email
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    = yield
    %a.glyphicon.glyphicon-chevron-up{href: '#'}
