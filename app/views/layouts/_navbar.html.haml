%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand.lg
        = link_to(root_path) do
          .logo
            .logo-c
            .logo-l
      -#= link_to "Chuntao Lu", root_path, class: "navbar-brand"
    #bs-navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.pull-right
        %li{class: active?(microposts_path)}
          = link_to "TIL", microposts_path
        %li{class: active?(articles_path)}
          = link_to "Blog", articles_path
        %li{class: active?(moocs_path)}
          = link_to 'Mooc', moocs_path
        - ['projects', 'about'].each do |page_name|
          - if Page.exists? page_name
            %li{class: active?(page_path(page_name))}
              = link_to page_name.capitalize, page_path(page_name)
        - if current_user
          %li.dropdown
            %button.btn.btn-sm.btn-success
              Admin
            %ul.dropdown-menu
              %li= link_to "Pages", pages_path
              %li= link_to "Users", users_path
              %li= link_to "New Til", new_micropost_path
              %li= link_to "New Post", new_article_path
              %li.divider
              %li= link_to "Log out", logout_path
    .navbar-shadow
